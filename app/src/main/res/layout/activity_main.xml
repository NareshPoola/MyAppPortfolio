<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.purpletalk.myappportfolio.MainActivity">

    <TextView
        android:text="My Nanodegree Apps!"
        android:layout_width="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="14dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:background="?attr/colorPrimary"
            android:textAllCaps="true"
            android:onClick="onClick"
            android:id="@+id/view_spotify_streamer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/spotify_streamer"
            android:layout_marginBottom="15dp"
            style="@style/Widget.AppCompat.Button.Colored"
            />

        <Button
            android:background="?attr/colorPrimary"
            android:textAllCaps="true"
            android:id="@+id/view_scores_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/scores_app"
            android:layout_marginBottom="15dp"
            android:onClick="onClick"
            style="@style/Widget.AppCompat.Button.Colored"
            />

        <Button
            android:background="?attr/colorPrimary"
            android:textAllCaps="true"
            android:id="@+id/view_library_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/library_app"
            android:layout_marginBottom="15dp"
            android:onClick="onClick"
            style="@style/Widget.AppCompat.Button.Colored"
            />

        <Button
            android:background="?attr/colorPrimary"
            android:textAllCaps="true"
            android:id="@+id/view_build_it_bigger"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/build_it_bigger"
            android:layout_marginBottom="15dp"
            android:onClick="onClick"
            style="@style/Widget.AppCompat.Button.Colored"
            />

        <Button
            android:background="?attr/colorPrimary"
            android:textAllCaps="true"
            android:id="@+id/view_xyz_reader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/xyz_reader"
            android:onClick="onClick"
            android:layout_marginBottom="15dp"
            style="@style/Widget.AppCompat.Button.Colored"
            />

        <Button
            android:background="?attr/colorAccent"
            android:textAllCaps="true"
            android:id="@+id/view_capstone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/capstone"
            android:layout_marginBottom="15dp"
            style="@style/Widget.AppCompat.Button.Colored"
            />

    </LinearLayout>
</RelativeLayout>
